{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <h1>Atelier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atelier.id }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ atelier.heureDebut ? atelier.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ atelier.heureFin ? atelier.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Intervenants</th>
                <td>{{ atelier.intervenants ? atelier.intervenants|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_atelier_index') }}">back to list</a>

    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}">edit</a>

    {{ include('atelier/_delete_form.html.twig') }}
{% endblock %}
