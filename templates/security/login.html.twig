{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8">
        <form method="post" class="max-w-md mx-auto bg-white p-8 border rounded-md shadow-md">
            {% if error %}
                <div class="alert alert-danger mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-2xl font-semibold mb-6">Please sign in</h1>

            <div class="mb-4">
                <label for="inputEmail" class="block text-sm font-medium text-gray-600">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input mt-1 block w-full border" autocomplete="email" required autofocus>
            </div>

            <div class="mb-4">
                <label for="inputPassword" class="block text-sm font-medium text-gray-600">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-input mt-1 block w-full border" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800" type="submit">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}
