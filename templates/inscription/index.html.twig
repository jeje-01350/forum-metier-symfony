{% extends 'base.html.twig' %}

{% block title %}Inscription index{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-8 bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-4">Inscription Index</h1>

        <table class="w-full table-auto">
            <thead>
                <tr>
                    <th class="border px-4 py-2">Id</th>
                    <th class="border px-4 py-2">DateInscription</th>
                    <th class="border px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for inscription in inscriptions %}
                    <tr>
                        <td class="border px-4 py-2">{{ inscription.id }}</td>
                        <td class="border px-4 py-2">{{ inscription.dateInscription ? inscription.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="border px-4 py-2">
                            <a href="{{ path('app_inscription_show', {'id': inscription.id}) }}" class="text-blue-500 hover:underline">Show</a>
                            <a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="border px-4 py-2" colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_inscription_new') }}" class="block mt-4 text-blue-500 hover:underline">Create new</a>
    </div>
{% endblock %}
