{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-4">Inscription</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th class="border px-4 py-2">Id</th>
                    <td class="border px-4 py-2">{{ inscription.id }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">DateInscription</th>
                    <td class="border px-4 py-2">{{ inscription.dateInscription ? inscription.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_inscription_index') }}" class="block mt-4 text-blue-500 hover:underline">Back to List</a>
        <a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}" class="block mt-2 text-blue-500 hover:underline">Edit</a>

        {{ include('inscription/_delete_form.html.twig') }}
    </div>
{% endblock %}
