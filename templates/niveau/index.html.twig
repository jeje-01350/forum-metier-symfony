{% extends 'base.html.twig' %}

{% block title %}Niveau index{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-8">
        <h1 class="text-2xl font-bold mb-4">Niveau index</h1>

        <table class="w-full bg-white border rounded shadow-md">
            <thead>
                <tr>
                    <th class="py-2 px-4 border-b">Id</th>
                    <th class="py-2 px-4 border-b">Nom</th>
                    <th class="py-2 px-4 border-b">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for niveau in niveaux %}
                    <tr>
                        <td class="py-2 px-4 border-b">{{ niveau.id }}</td>
                        <td class="py-2 px-4 border-b">{{ niveau.nom }}</td>
                        <td class="py-2 px-4 border-b">
                            <a href="{{ path('app_niveau_show', {'id': niveau.id}) }}" class="text-blue-500 hover:underline mr-2">Show</a>
                            <a href="{{ path('app_niveau_edit', {'id': niveau.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="py-2 px-4 border-b" colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_niveau_new') }}" class="block mt-4 text-blue-500 hover:underline">Create new</a>
    </div>
{% endblock %}
