{% extends 'base.html.twig' %}

{% block title %}Forum Index{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-8 bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-4">Forum Index</h1>

        <table class="w-full table-auto">
            <thead>
                <tr>
                    <th class="border px-4 py-2">Id</th>
                    <th class="border px-4 py-2">Nom</th>
                    <th class="border px-4 py-2">Description</th>
                    <th class="border px-4 py-2">Date</th>
                    <th class="border px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for forum in forums %}
                    <tr>
                        <td class="border px-4 py-2">{{ forum.id }}</td>
                        <td class="border px-4 py-2">{{ forum.nom }}</td>
                        <td class="border px-4 py-2">{{ forum.description }}</td>
                        <td class="border px-4 py-2">{{ forum.date ? forum.date|date('Y-m-d') : '' }}</td>
                        <td class="border px-4 py-2">
                            <a href="{{ path('app_forum_show', {'id': forum.id}) }}" class="text-blue-500 hover:underline">Show</a>
                            <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="border px-4 py-2" colspan="5">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_forum_new') }}" class="block mt-4 text-blue-500 hover:underline">Create New</a>
    </div>
{% endblock %}
