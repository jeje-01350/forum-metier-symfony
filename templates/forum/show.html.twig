{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-4">Forum</h1>

        <table class="w-full table-auto">
            <tbody>
                <tr>
                    <th class="border px-4 py-2">Id</th>
                    <td class="border px-4 py-2">{{ forum.id }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Nom</th>
                    <td class="border px-4 py-2">{{ forum.nom }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Description</th>
                    <td class="border px-4 py-2">{{ forum.description }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Date</th>
                    <td class="border px-4 py-2">{{ forum.date ? forum.date|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_forum_index') }}" class="block mt-4 text-blue-500 hover:underline">Back to List</a>
        <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="block mt-2 text-blue-500 hover:underline">Edit</a>

        {{ include('forum/_delete_form.html.twig') }}
    </div>
{% endblock %}
