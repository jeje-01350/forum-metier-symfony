{% extends 'base.html.twig' %}

{% block title %}Lyceen index{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-8 bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-4">Lyceen index</h1>

        <table class="w-full table-auto">
            <thead>
                <tr>
                    <th class="px-4 py-2">Id</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Prenom</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Tel</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for lyceen in lyceens %}
                    <tr>
                        <td class="border px-4 py-2">{{ lyceen.id }}</td>
                        <td class="border px-4 py-2">{{ lyceen.nom }}</td>
                        <td class="border px-4 py-2">{{ lyceen.prenom }}</td>
                        <td class="border px-4 py-2">{{ lyceen.user.email }}</td>
                        <td class="border px-4 py-2">{{ lyceen.tel }}</td>
                        <td class="border px-4 py-2">
                            <a href="{{ path('app_lyceen_show', {'id': lyceen.id}) }}" class="text-blue-500 hover:underline">Show</a>
                            <a href="{{ path('app_lyceen_edit', {'id': lyceen.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="border px-4 py-2">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_lyceen_new') }}" class="block mt-4 text-blue-500 hover:underline">Create new</a>
    </div>
{% endblock %}
