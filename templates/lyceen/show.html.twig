{% extends 'base.html.twig' %}

{% block title %}Lyceen{% endblock %}

{% block body %}
<div class="p-6 w-11/12 mx-auto mt-8 border bg-white rounded-lg">
    <h1 class="text-2xl font-bold mb-4  flex flex-col justify-center items-center">Détails du lycéen</h1>

    <div class="overflow-x-auto ">
        <table class="min-w-full divide-y divide-gray-200">
            <tbody class="bg-white divide-y divide-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
                <td class="px-6 py-3">{{ lyceen.id }}</td>
            </tr>
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom
                </th>
                <td class="px-6 py-3">{{ lyceen.nom }}</td>
            </tr>
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom
                </th>
                <td class="px-6 py-3">{{ lyceen.prenom }}</td>
            </tr>
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email
                </th>
                <td class="px-6 py-3">{{ lyceen.user.email}}</td>
            </tr>
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telephone
                </th>
                <td class="px-6 py-3">{{ lyceen.tel }}</td>
            </tr>
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('app_lyceen_index') }}">back to list</a>
        {% endif %}

    <a href="{{ path('app_lyceen_edit', {'id': lyceen.id}) }}">edit</a>

    {{ include('lyceen/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
