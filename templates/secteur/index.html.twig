{% extends 'base.html.twig' %}

{% block title %}Secteur index{% endblock %}

{% block body %}
    <div class="my-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Secteur Index</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                <thead class="bg-gray-200 text-gray-700">
                    <tr>
                        <th class="py-3 px-6 border-b">Id</th>
                        <th class="py-3 px-6 border-b">Nom</th>
                        <th class="py-3 px-6 border-b">Description</th>
                        <th class="py-3 px-6 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    {% for secteur in secteurs %}
                        <tr>
                            <td class="py-3 px-6 border-b">{{ secteur.id }}</td>
                            <td class="py-3 px-6 border-b">{{ secteur.nom }}</td>
                            <td class="py-3 px-6 border-b">{{ secteur.description }}</td>
                            <td class="py-3 px-6 border-b">
                                <a href="{{ path('app_secteur_show', {'id': secteur.id}) }}" class="text-blue-500 hover:underline mr-4">Show</a>
                                <a href="{{ path('app_secteur_edit', {'id': secteur.id}) }}" class="text-green-500 hover:underline">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="py-3 px-6 border-b text-center" colspan="4">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_secteur_new') }}" class="mt-6 bg-green-500 text-white py-2 px-6 rounded inline-block hover:bg-green-700 focus:outline-none focus:shadow-outline-green active:bg-green-800">
            Create New
        </a>
    </div>
{% endblock %}
