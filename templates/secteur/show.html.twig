{% extends 'base.html.twig' %}

{% block title %}Secteur{% endblock %}

{% block body %}
    <div class="my-details-container">
        <h1 class="my-details-title text-2xl font-bold mb-4">Secteur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th class="border px-4 py-2">Id</th>
                    <td class="border px-4 py-2">{{ secteur.id }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Nom</th>
                    <td class="border px-4 py-2">{{ secteur.nom }}</td>
                </tr>
                <tr>
                    <th class="border px-4 py-2">Description</th>
                    <td class="border px-4 py-2">{{ secteur.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_secteur_index') }}" class="btn btn-secondary mt-4">Back to List</a>
        <a href="{{ path('app_secteur_edit', {'id': secteur.id}) }}" class="btn btn-primary mt-2">Edit</a>

        {{ include('secteur/_delete_form.html.twig') }}
    </div>
{% endblock %}
