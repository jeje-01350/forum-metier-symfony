{% extends 'base.html.twig' %}

{% block title %}Secteur{% endblock %}

{% block body %}
    <div class="my-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Secteur</h1>

        <div class="bg-white p-6 rounded-md shadow-md">
            <table class="w-full table-auto">
                <tbody>
                    <tr>
                        <th class="border px-4 py-2">Id</th>
                        <td class="border px-4 py-2">{{ secteur.id }}</td>
                    </tr>
                    <tr>
                        <th class="border px-4 py-2">Nom</th>
                        <td class="border px-4 py-2">{{ secteur.nom }}</td>
                    </tr>
                    <tr>
                        <th class="border px-4 py-2">Description</th>
                        <td class="border px-4 py-2">{{ secteur.description }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-6">
                <a href="{{ path('app_secteur_index') }}" class="inline-block px-6 py-2 text-white bg-gray-500 rounded hover:bg-gray-700 focus:outline-none focus:shadow-outline-gray active:bg-gray-800">
                    Back to List
                </a>
                <a href="{{ path('app_secteur_edit', {'id': secteur.id}) }}" class="inline-block px-6 py-2 ml-2 text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800">
                    Edit
                </a>
            </div>

            {{ include('secteur/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
