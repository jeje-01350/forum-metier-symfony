{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-8">
        <h1 class="text-3xl font-bold mb-4">Salle Index</h1>

        <table class="table-auto w-full">
            <thead>
                <tr>
                    <th class="px-4 py-2">Id</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Capacit√©</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for salle in salles %}
                    <tr>
                        <td class="border px-4 py-2">{{ salle.id }}</td>
                        <td class="border px-4 py-2">{{ salle.nom }}</td>
                        <td class="border px-4 py-2">{{ salle.capacite }}</td>
                        <td class="border px-4 py-2">
                            <a href="{{ path('app_salle_show', {'id': salle.id}) }}" class="text-blue-500 hover:underline mr-2">Show</a>
                            <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="border px-4 py-2" colspan="4">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_salle_new') }}" class="block mt-4 text-blue-500 hover:underline">Create new</a>
    </div>
{% endblock %}
