{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8">
        <h1 class="text-3xl font-bold mb-4">Salle Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ salle.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ salle.nom }}</td>
                </tr>
                <tr>
                    <th>Capacite</th>
                    <td>{{ salle.capacite }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_salle_index') }}" class="block mt-4 text-blue-500 hover:underline">Back to List</a>
        <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="block mt-2 text-blue-500 hover:underline">Edit</a>

        {{ include('salle/_delete_form.html.twig') }}
    </div>
{% endblock %}
